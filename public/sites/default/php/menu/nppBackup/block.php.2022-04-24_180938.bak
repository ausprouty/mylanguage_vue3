function mylanguage_block_format($title, $content){

  $output = '<div class="block block-mylanguage">';
  $output .= '<h2 class="title">'.   $title . '</h2>';
  $output .= '<p align = "center">' . $content .  '</p>';
  $output .= '</div><div class="block-bottom"></div>';
  return $output;
}
